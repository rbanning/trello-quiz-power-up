{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./src/ts",
    "outDir": "./src/js",
    "sourceMap": true,
    "declaration": false,
    "module": "esnext",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "ES2019.Array",
      "dom"
    ],
    "paths": {
      "@app/*": ["*"]
    }
  }
}
